{
  "manifest_version": 2,
  "name": "Plock",
  "description": "Ad Blocker",
  "version": "0.2",

  "icons": {
     "16": "/img/plock_16.png",
     "48": "/img/plock_48.png"
   },

  "browser_action": {
    "default_icon": "/img/plock.png",
    "default_title": "Plock"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background",
    "tabs",
    "https://raw.githubusercontent.com"
  ],
  "background": {
    "scripts": ["plock.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
          "content_plock.js"
      ]
    }
  ]
}