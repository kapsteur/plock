{
  "manifest_version": 2,
  "name": "Plock",
  "description": "Ad Blocker",
  "version": "0.2",

  "browser_action": {
    "default_icon": "plock.png",
    "default_title": "Plock"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background",
    "tabs"
  ],
  "background": {
    "scripts": ["plock.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
          "content_plock.js"
      ]
    }
  ]
}